    "version": "0.2.0",
    "configurations": [
        {
            "name": "client-test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/client/bin/droneengage_client_bus.so",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/src/client/bin/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing -gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "file-sender",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/client/bin/image_sender",
            "args": ["./img.jpg"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/src/client/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing -gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
